{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean merged branches",
            "type": "shell",
            "command": "git",
            "args": [
                "branch",
                "--merged",
                "main",
                "|",
                "grep",
                "-v",
                "main",
                "|",
                "xargs",
                "-n",
                "1",
                "git",
                "branch",
                "-d"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
